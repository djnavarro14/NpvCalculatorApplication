@model NpvCalculatorApplication.Models.NpvObjectModel

@{
    ViewBag.Title = "Npv Calculator";
}

<form>
    <div class="form-horizontal">
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-danger">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Validation Message</h4>
                    </div>
                    <div class="modal-body"></div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Ok</button>
                    </div>
                </div>
            </div>
        </div>

        <hr />
        @Html.HiddenFor(model => model.CashFlows)

        <div class="form-group">
            @Html.LabelFor(model => model.IntialInvestment, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.IntialInvestment, htmlAttributes: new { @class = "form-control text-box single-line", type = "number", step = "1" })
            </div>
        </div>

        <div class="form-group form-inline">
            @Html.Label("Cash Flow ($):", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBox("txtCashFlow", "0", htmlAttributes: new { @class = "form-control text-box single-line", type = "number", step = "1" })
                <button id="btnAdd" type="button" class="btn btn-success">Add</button>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <table id="tblCashFlows" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Value</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LowerBoundDiscountRate, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.LowerBoundDiscountRate, htmlAttributes: new { @class = "form-control text-box single-line", type = "number", step = "0.01" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UpperBoundDiscountRate, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.UpperBoundDiscountRate, htmlAttributes: new { @class = "form-control text-box single-line", type = "number", step = "0.01" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DiscountRateIncrement, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.DiscountRateIncrement, htmlAttributes: new { @class = "form-control text-box single-line", type = "number", step = "0.01" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <button id="btnCalculate" type="button" class="btn btn-default">Calculate</button>
                <button id="btnReset" type="button" class="btn btn-primary">Reset</button>
            </div>
        </div>
        <hr />
        <div class="form-group">
            <canvas id="chart" style="display: none"></canvas>
        </div>
    </div>
</form>
